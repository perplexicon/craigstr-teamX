<h1><%= @post.name %></h1>

<h5>
  <%= @post.user.email %> 
  <%= time_ago_in_words(@post.created_at) %> ago
</h5>

<% if current_user.author_of?(@post) %>
  <div>
    <p> *** 
    <%= link_to "Edit", edit_region_category_post_path(@region, @category, @post) %> *** 
    <%= link_to "Delete", [@region, @category, @post], method: :delete, data: { confirm: "Are you sure?" } %> ***
    </p>
  </div>
<% end %>

<h3>Posted under 
  <%= link_to @region.name, @region %> > 
  <%= link_to @category.name, [@region, @category]%> 
</h3>

<p><%= @post.body %></p>
