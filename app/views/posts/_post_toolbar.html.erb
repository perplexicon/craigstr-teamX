<p>***
<% if current_user && current_user.author_of?(object) %>
  <%= link_to "Edit", edit_route %> 
  *** 
  <%= link_to "Delete", route, method: :delete, data: { confirm: "Are you sure?" } %> 
  ***
<% end %>
<% if current_user && current_user.spammed?(object) %>
  <%= link_to "Unflag", spam_route, method: :delete %>
  ***
<% elsif current_user %>
  Flag as <%= link_to "SPAM", spam_route, method: :post %> 
  ***
<% end %>
<% if object.spams.size > 0 %>
  Flagged as spam by 
  <%= pluralize(object.spams.size, "Person") %>
  ***
<% end %>
</p>
